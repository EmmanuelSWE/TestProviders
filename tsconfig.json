{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,          // keep true for Vite; set false only if needed
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noImplicitReturns": false,       // relaxed
    "noImplicitThis": false,          // relaxed
    "noUnusedLocals": false,          // relaxed
    "noUnusedParameters": false,      // relaxed
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "baseUrl": ".",
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "rollup.config.mjs",
    "**/tests",
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**"
  ],
  "include": ["src", "typings"]

}